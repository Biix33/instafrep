<div class="card mt-3">
    <div class="card-header">
        <div class="row">
            <div class="card-img col-md-4">
                <img src="{{ comment.user.avatar }}" alt="">
            </div>
            <h5 class="card-title col-md-8 text-center">{{ comment.user.pseudo }}</h5>
        </div>
    </div>
    <div class="card-body">
        {{ comment.content }}
    </div>
    <div class="card-footer">
        <a href="{{ url('comment_edit', {'id': comment.id}) }}" class="btn btn-warning">
            <i class="fas fa-cog"></i>
        </a>
        {% include 'comment/_delete_form.html.twig' %}
    </div>
</div>