<div class="card mt-3 post">
    <div class="row card-header">
        <div class="col-md-2">
            <a href="{{ path('user_profile', {'id':post.userId.id}) }}">
                <img alt="" class="card-img img-fluid avatar"
                     src="{{ post.userId.avatar }}">
            </a>
        </div>
        <div class="col-md-10 text-center">
            <h5 class="card-title">{{ post.userId.pseudo }}</h5>
        </div>
    </div>
    <div class="card-body">
        <a href="{{ path('post_single', {'id':post.id}) }}" class="row">
            <div class="col-md-2">
                <img src="{{ post.attachement }}" alt="" class="card-img img-fluid">
            </div>
            <div class="col-md-10">
                {{ post.content }}
            </div>
        </a>
    </div>
    <div class="card-footer post-footer">
        <div class="row justify-content-between">
            <div class="">
                <span>{% include 'post/_like.html.twig' %}</span><span id="{{ 'post' ~ post.id }}"></span> Likes
                <i class="fas fa-comment-alt"></i><span> {{ post.nbComments }} Commentaires</span>
            </div>
            <span>publi√© il y a
                {% if post.publishedAt is not null %}
                    {{ post.publishedAt.format('d-m-Y') }}
                {% endif %}
            </span>
        </div>
    </div>
</div>