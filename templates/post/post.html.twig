<div class="card mt-3 post">
    <div class="row card-header">
        <div class="col-md-2">
            <a href="{{ path('user_profile', {'id':post.userId.id}) }}">
                <img alt="" class="card-img"
                     src="https://fakeimg.pl/440x320/">
            </a>
        </div>
        <div class="col-md-10 text-center">
            {{ post.userId.pseudo }}
        </div>
    </div>
    <div class="row card-body">
        <div class="col-md-2">
            <a href="{{ path('post_single', {'id':post.id}) }}">
                <img src="https://fakeimg.pl/440x320/" alt="" class="card-img avatar">
            </a>
        </div>
        <div class="col-md-10">
            {{ post.content }}
        </div>
    </div>
    <div class="card-footer post-footer">
        <div class="row justify-content-between">
            <div class="">
                <i class="fas fa-heart"></i><span> Likes</span>
                <i class="fas fa-comment-alt"></i><span> {{ post.comments.count }} Commentaires</span>
            </div>
            <span>publi√© il y a
                {% if post.publishedAt is not null %}
                    {{ post.publishedAt.format('d-m-Y') }}
                {% endif %}
            </span>
        </div>
    </div>
</div>